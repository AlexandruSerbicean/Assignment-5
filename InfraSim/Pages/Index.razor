@page "/"

<PageTitle>Home</PageTitle>

<h3>Counter</h3>
<p>Value: @counter</p>
<button @onclick="StartIncrementing">Increment</button>

<h1>Hello, world!</h1>
Welcome to your new app.

@code {
    private int counter = 1;

    protected async Task StartIncrementing()
    {
        while (counter < 100)
        {
            counter++;
            StateHasChanged(); 
            await Task.Delay(100); 
        }
    }
}
