@code {
    [Parameter]
    public EventCallback StartPressed { get; set; }

    private async Task OnStartClicked()
    {
        if (StartPressed.HasDelegate)
        {
            await StartPressed.InvokeAsync();
        }
    }
}

<div class="div-container">
    <button class="round-button green-button" @onclick="OnStartClicked">Start</button>
</div>
